<Window x:Class="Szogun1987.TaskExceptions.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Szogun1987.TaskExceptions"
        mc:Ignorable="d"
        Title="Exceptions in tasks" Height="350" Width="525">
    <Grid>        
        <StackPanel 
            Orientation="Horizontal" 
            HorizontalAlignment="Center" 
            VerticalAlignment="Center">
            <StackPanel.Resources>
                <Style TargetType="Button">
                    <Setter Property="Margin" Value="4"/>
                    <Setter Property="Padding" Value="4"/>
                </Style>
            </StackPanel.Resources>
            <Button 
                Click="WithAwait_Click">
                With await
            </Button>
            <Button 
                Click="WithoutAwait_Click">
                Without await
            </Button>
            <Button
                Click="GCCollect_Click">
                GC.Collect
            </Button>
        </StackPanel>
    </Grid>
</Window>
